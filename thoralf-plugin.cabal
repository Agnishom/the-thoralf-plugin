name:                thoralf-plugin
version:             0.1.0.0
license:             MIT
license-file:        LICENSE
author:              Divesh Otwani
maintainer:          dotwani@haverford.edu
category:            Development
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  hs-source-dirs:        src
  default-language:      Haskell2010
  exposed-modules:       ThoralfPlugin.Plugin
                       , ThoralfPlugin.Theory.DisEq
                       , ThoralfPlugin.Theory.FiniteMap
                       , ThoralfPlugin.Theory.UoM
                       , ThoralfPlugin.Box.TheoryBox
                       , ThoralfPlugin.Singletons.Symbol

  other-modules:         ThoralfPlugin.Box.Nat
                       , ThoralfPlugin.Box.FiniteMap
                       , ThoralfPlugin.Box.Symbol
                       , ThoralfPlugin.Box.UoM

  other-extensions:      TypeFamilies
                       , TypeInType
                       , GADTs
                       , RecordWildCards

  build-depends:         base
                       , ghc
                       , ghc-prim
                       , containers
                       , simple-smt
